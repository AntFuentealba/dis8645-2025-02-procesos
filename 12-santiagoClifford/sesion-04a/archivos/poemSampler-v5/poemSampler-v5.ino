  digitalWrite(botonPin, HIGH);
  Serial.begin(9600);

  display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);
}

void loop() {
  if (digitalRead(botonPin) == LOW) {
    botoncomputo++;
    delay(200);
  }
